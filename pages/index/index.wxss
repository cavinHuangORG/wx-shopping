/**index.wxss**/
@import "../../template/list/list.wxss";

/*banner图  */
swiper {
    height: 421.5rpx;
}
.slide-image {
    width: 100%;
    height: 100%;
}
/*搜索框  */
.search-box{
  height: 60rpx;
  width: 90%;
  border: 2rpx solid #ccc;
  margin: 20rpx auto;
  border-radius: 20rpx;
  display: flex;
  align-items: center
}
.search-box icon{
  height: 40rpx;
  margin-left: 20rpx
}
.search-box text{
  color: #ccc;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 34rpx;
  margin-left: 10rpx
}
/*精选主题  */
.fine-box{

}
.fine-title{
  font-size: 32rpx;
  color: #91cfda;
  text-align: center;
  display: block;
  margin: 30rpx 0;
}
.fine-img-box{
  display: flex;
  justify-content: space-between;
}
.fine-img-box navigator{
  width: 49.9%;
}
.fine-img-box image{
  display: block;
  width: 100%;
  height: 375rpx;
}
.fine-img-big navigator{
  width: 100%;
}

