/* pages/changeAddress/changeAddress.wxss */
page,.changeAddress-page{
  height: 100%;
  background-color: #efefef;
}
.changeAddress-list-box{
  background-color: #fff;
  padding-left: 40rpx;
  box-sizing: border-box;
}
.changeAddress-list{
  border-bottom: 1rpx solid #eee;
}
.changeAddress-list .name{
  /* height: 140rpx;
  display: inline-block; */
}
.sex-box{
 margin: 20rpx 0;
 display: flex;
 justify-content: center;
 align-items: center;
}
.changeAddress-list-box .title{
  font-size: 32rpx;
  height:100rpx;
  line-height:100rpx;
  display: inline-block;
  text-align: center;
}
.changeAddress-list-box .input-box{
  width: 70%;
  float: right;
  font-size: 28rpx;
  padding-top: 20rpx;
  border-bottom: 1rpx solid #eee;
}
.changeAddress-list-box .input-box input{
  height: 60rpx;
}
.changeAddress-list-box .input-box2{
  width: 70%;
  float: right;
  height: 100rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
}
.radio-group radio{
  display: none;
}
.radio-group .radio{
  border: 1rpx solid #91CFDA;
  width: 100rpx;
  height: 50rpx;
  display: inline-block;
  font-size: 28rpx;
  text-align: center;
  line-height: 50rpx;
  margin-right: 50rpx;
  
}
.changeAddress-other{
  width: 100%;
  height: 250rpx;
}
.changeAddress-other view{
  width: 70%;
  float: right;
  font-size: 28rpx;
  padding-top: 40rpx;
}
.changeAddress-other textarea{
  width: 100%;
  height: 200rpx;
  
}
.changeAddress-button{
  width: 100%;
  display: flex;
  justify-content: space-around;
}
.changeAddress-button button{
  display: inline-block;
  margin-top: 40rpx;
  width: 300rpx;
  color: #fff;
  background-color: #ccc;
  border: none;
}
.changeAddress-button button::after{
  border:none;
}

.changeAddress-button button:last-child{
  background-color: #91CFDA;
}
