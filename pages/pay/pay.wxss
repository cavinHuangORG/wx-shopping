/* pages/pay/pay.wxss */
.pay-top{
  font-size: 28rpx;
  position:relative;
  height:90rpx;
  line-height:90rpx;
  color:#adadad;
  border-bottom:20rpx solid #ededed;
  text-align:center;
}
.pay-list{
  display: flex;
  padding: 30rpx;
  border-bottom: 2rpx solid #eee;
}
.list-img{
  width: 180rpx;
  height: 180rpx;
}
.list-img image{
  width: 100%;
  height: 100%;
}
.list-text view{
  margin-left: 30rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 32rpx;
}

.pay-bottom{
  border-top: 1rpx solid #eee;
  width: 100%;
  position: fixed;
  bottom: 0;
  float: left;
  height: 100rpx;
  color: #91cfda;
  line-height: 100rpx;
  font-size: 32rpx;
}
.payTotal{
  float: left;
  margin-left:20rpx; 
}
.pay-bottom .goPay{
  float: right;
  width: 240rpx;
  text-align: center;
  color: #fff;
  background-color: #91cfda;
}